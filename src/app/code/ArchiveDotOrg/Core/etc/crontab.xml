<?xml version="1.0"?>
<!--
/**
 * ArchiveDotOrg Core Module - Cron Configuration
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="default">
        <job name="archivedotorg_import_shows" instance="ArchiveDotOrg\Core\Cron\ImportShows" method="execute">
            <config_path>archivedotorg/cron/schedule</config_path>
        </job>
        <job name="archivedotorg_sync_albums" instance="ArchiveDotOrg\Core\Cron\SyncAlbums" method="execute">
            <schedule>0 4 * * *</schedule>
        </job>
        <job name="archivedotorg_cleanup_progress" instance="ArchiveDotOrg\Core\Cron\CleanupProgress" method="execute">
            <schedule>0 0 * * 0</schedule>
        </job>
        <!-- Process import queue every minute -->
        <job name="archivedotorg_process_import_queue" instance="ArchiveDotOrg\Core\Cron\ProcessImportQueue" method="execute">
            <schedule>* * * * *</schedule>
        </job>
        <!-- Enrich artist stats monthly -->
        <job name="archivedotorg_enrich_artist_stats" instance="ArchiveDotOrg\Core\Cron\EnrichArtistStats" method="execute">
            <schedule>0 3 1 * *</schedule>
        </job>
        <!-- Update venue statistics nightly -->
        <job name="archivedotorg_update_venue_stats" instance="ArchiveDotOrg\Core\Cron\UpdateVenueStats" method="execute">
            <schedule>30 3 * * *</schedule>
        </job>
    </group>
</config>
